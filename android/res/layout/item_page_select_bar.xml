<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_page_select_bar_item"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center_vertical" >
    <ImageView
        android:id="@+id/iv_page_select_bar_item"
        android:layout_width="@dimen/dp34"
        android:layout_height="@dimen/dp34"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/tv_page_select_bar_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_page_select_bar_item"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="@color/letter_grey_deep_2"
        android:textSize="@dimen/px22" />
</RelativeLayout>