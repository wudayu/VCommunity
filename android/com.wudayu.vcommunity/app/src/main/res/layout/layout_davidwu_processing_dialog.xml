<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_processing_dialog_bg"
    android:padding="@dimen/padding_processing_dialog">

    <com.wudayu.vcommunity.views.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="@dimen/dp60"
        android:layout_height="@dimen/dp60"
        android:layout_centerHorizontal="true"
        wheel:matProg_barColor="@color/col_app"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/iv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_wheel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_processing_dialog"
        android:text="@string/str_loading"
        android:textColor="@color/letter_grey_deep_full" />
</RelativeLayout>