<resources>
    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    <style name="AppGoneTitleTheme" parent="AppTheme" >
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppInvisibleTitleTheme" parent="AppBaseTheme" >
        <item name="actionBarStyle">@style/Widget.Styled.InvisibleActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.InvisibleActionBar</item>
    </style>
    <style name="AppBaseTheme" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarSize">@dimen/dp42</item>
        <item name="android:actionBarSize">@dimen/dp42</item>
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
    </style>
    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showCustom</item>
        <item name="android:displayOptions">showCustom</item>
        <item name="android:background">@drawable/shape_actionbar_bg</item>
    </style>
    <style name="Widget.Styled.InvisibleActionBar" parent="Widget.Styled.ActionBar">
        <item name="android:background">@color/col_app</item>
    </style>


<!-- Popup -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

<!-- Pull to Refresh Component -->
    <style name="Theme.PullToRefresh" parent="AppTheme">
        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
    </style>
    <!--
      ptrHeaderStyle above refers to this style which contains all of the
      DefaultHeaderTransformer customization values. The name and parent
      can be anything, but only the attributes defined in
      library/res/attrs.xml are actually read in.
    -->
    <style name="Widget.Custom.PtrHeader" parent="android:Widget">
        <!-- The background of the header view -->
        <item name="ptrHeaderBackground">@color/col_app</item>

        <!-- The height of the header view. Please note, only set if in you really need to
        <item name="ptrHeaderHeight">...</item> -->

        <!-- TextAppearance of the header view's title text -->
        <item name="ptrHeaderTitleTextAppearance">@color/col_app_white_text</item>

        <!-- Color to tint the progress bar
        <item name="ptrProgressBarColor">@color/col_app</item> -->

        <!-- Radius of the progress bar corners
        <item name="ptrProgressBarCornerRadius">@dimen/dp04</item> -->

        <!-- Style of the Progress Bar. Values are either: inside or outside
        <item name="ptrProgressBarStyle">...</item> -->

        <!-- The strings to be displayed at the various states -->
        <item name="ptrPullText">@string/str_ptr_pull_text</item>
        <item name="ptrRefreshingText">@string/str_ptr_refreshing_text</item>
        <item name="ptrReleaseText">@string/str_ptr_release_text</item>
    </style>
<!-- End -->

<!-- TextSize -->
    <style name="TextSizeLarge">
        <item name="android:textSize">@dimen/px36</item>
    </style>
    <style name="TextSizeMedium">
        <item name="android:textSize">@dimen/px32</item>
    </style>
<!-- End -->

<!-- TextView -->
    <style name="TvStyleLargeWhite" parent="TextSizeLarge">
        <item name="android:textColor">@color/col_app_white_text</item>
    </style>
    <style name="TvStyleMediumWhite" parent="TextSizeMedium">
        <item name="android:textColor">@color/col_app_white_text</item>
    </style>
    <style name="TvStyleMediumApp" parent="TextSizeMedium">
        <item name="android:textColor">@color/col_app</item>
    </style>
    <style name="TvStyleMediumGrey" parent="TextSizeMedium">
        <item name="android:textColor">@color/col_app_grey_text</item>
    </style>
<!-- End -->

<!-- EditView -->
    <style name="EdtStyleMediumGrey" parent="TvStyleMediumGrey">
        <item name="android:textColorHint">@color/letter_grey_deep_13</item>
    </style>
    <style name="EdtSingleLineStyleMediumGrey" parent="EdtStyleMediumGrey">
        <item name="android:singleLine">true</item>
    </style>
    <style name="EdtPasswordStyle" parent="EdtSingleLineStyleMediumGrey">
        <item name="android:inputType">textPassword</item>
    </style>
<!-- End -->

<!-- Button -->
    <style name="BtnStyleLargeApp" parent="TvStyleLargeWhite">
        <item name="android:background">@drawable/selector_round_none_frame_app_bg</item>
    </style>
    <style name="BtnStyleMediumFunction" parent="TvStyleMediumApp">
        <item name="android:background">@drawable/selector_square_app_frame_appgrey_bg</item>
    </style>
<!-- End -->

</resources>